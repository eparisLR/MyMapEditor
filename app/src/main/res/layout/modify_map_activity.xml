<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyMap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/create_a_map"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/return_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/retour"/>
        </LinearLayout>

        <EditText
            android:id="@+id/map_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:inputType="textPersonName"
            android:hint="@string/enter_a_map_name"/>
        <Button
            android:id="@+id/create_map_button"
            android:text="@string/create_a_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/create_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_a_point"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/point_name"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_a_name"/>

        <EditText
            android:id="@+id/point_latitude"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_latitude"/>

        <EditText
            android:id="@+id/point_longitude"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_the_longitude"/>

        <EditText
            android:id="@+id/point_type"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_a_type"/>

        <Button
            android:id="@+id/create_point_button"
            android:text="@string/create_a_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="500dp"/>

    </LinearLayout>

</ScrollView>